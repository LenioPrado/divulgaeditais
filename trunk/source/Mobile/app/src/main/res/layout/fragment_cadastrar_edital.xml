<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="mobile.divulga.editais.ifsuldeminas.edu.br.fragment.Todos">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_light"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/modalidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modalidade"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/txtModalidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/Numero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Numero"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtNumero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Digite o nÃºmero do edital"
                        android:inputType="number"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/Objeto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Objeto"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtObjeto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Descreva o edital"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Data"
                    android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Digite a modalidade"
                        android:inputType="date"
                        android:textSize="18sp" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/Selecionar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="Selecionar Arquivo"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btnSelecionar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_circle"
                        android:text="Selecionar"
                        android:textColor="@color/cardview_light_background" />


                </LinearLayout>

                <Button
                    android:id="@+id/cadastrar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_circle"
                    android:text="Cadastrar"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>
        </ScrollView>

</FrameLayout>
